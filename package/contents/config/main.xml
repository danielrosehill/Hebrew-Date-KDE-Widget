<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
    <kcfgfile name="plasma-org.kde.plasma.hebrewdate-appletrc"/>
    <group name="General">
        <!-- Display mode: 0 = Both dates, 1 = Hebrew only, 2 = Gregorian only -->
        <entry name="displayMode" type="Int">
            <default>0</default>
        </entry>

        <!-- Display order: 0 = Gregorian first, 1 = Hebrew first -->
        <entry name="displayOrder" type="Int">
            <default>0</default>
        </entry>

        <!-- Hebrew date format: 0 = "26 / Cheshvan / 5786", 1 = "26 Cheshvan 5786", 2 = Hebrew characters -->
        <entry name="hebrewFormat" type="Int">
            <default>1</default>
        </entry>

        <!-- Hebrew date size ratio (percentage of Gregorian size) -->
        <entry name="hebrewSizeRatio" type="Int">
            <default>100</default>
        </entry>

        <!-- Gregorian date format -->
        <entry name="gregorianFormat" type="String">
            <default>dd MMM yyyy</default>
        </entry>

        <!-- Show Hebrew year -->
        <entry name="showHebrewYear" type="Bool">
            <default>true</default>
        </entry>

        <!-- Show Gregorian year -->
        <entry name="showGregorianYear" type="Bool">
            <default>true</default>
        </entry>

        <!-- Show day of week in Gregorian format -->
        <entry name="showGregorianDayOfWeek" type="Bool">
            <default>false</default>
        </entry>

        <!-- Show day of week in Hebrew format -->
        <entry name="showHebrewDayOfWeek" type="Bool">
            <default>false</default>
        </entry>

        <!-- Font settings -->
        <entry name="fontFamily" type="String">
            <default>FreeSans</default>
        </entry>

        <entry name="fontBold" type="Bool">
            <default>false</default>
        </entry>

        <entry name="fontItalic" type="Bool">
            <default>false</default>
        </entry>

        <!-- Adaptive font sizing -->
        <entry name="autoSizeByContext" type="Bool">
            <default>true</default>
        </entry>

        <entry name="desktopFontSize" type="Int">
            <default>18</default>
        </entry>

        <entry name="panelFontSize" type="Int">
            <default>11</default>
        </entry>

        <!-- User location for sunset calculation -->
        <entry name="userCity" type="String">
            <default>Jerusalem</default>
        </entry>

        <entry name="userLatitude" type="String">
            <default>31.7683</default>
        </entry>

        <entry name="userLongitude" type="String">
            <default>35.2137</default>
        </entry>
    </group>
</kcfg>

